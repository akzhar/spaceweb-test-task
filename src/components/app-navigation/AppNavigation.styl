.app-navigation
  margin 0
  padding 0
  list-style none
  font-weight 700
  font-size 14px

  &__link
    position relative
    display flex
    padding 10px 22px
    color white
    text-transform uppercase

    &:hover,
    &:active
      background-color: app_color_blue

    &--active
      background-color: app_color_blue
      pointer-events none

      &::before
        content ""
        position absolute
        top 0
        left 0
        width 6px
        height 100%
        background-color app_color_cyan

  &__icon
    display flex
    justify-content center
    align-items center
    margin-right 15px

